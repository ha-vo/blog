<%- include('partials/header') %>
    <div class="container mt-4">
        <form method="POST" action="/posts/<%=device._id%>?_method=PUT">
            <div class="mb-3">
                <label for="name" class="form-label">Tên</label>
                <input type="text" class="form-control" id="name" value="<%= device.name %>">

            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <input type="text" class="form-control" id="description" value="<%= device.description %>">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Giá</label>
                <input type="text" class="form-control" id="price" value="<%= device.price %>">
            </div>
            <div class="mb-3">
                <label for="img" class="form-label">Địa chỉ hình ảnh</label>
                <input type="text" class="form-control" id="img" value="<%= device.img %>">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>