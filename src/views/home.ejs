<%- include('partials/header') %>
    <div class="container mt-4">
        <div class="row">
            <% for(let i=0; i < devices.length; i++) { %>
                <div class="col-sm-6 col-lg-4">
                    <div class="card">
                        <img src="<%= devices[i].img %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                <%= devices[i].name %>
                            </h5>
                            <p class="card-text">
                                <%= devices[i].description %>
                            </p>
                            <a href="/posts/<%= devices[i].id %>" class="btn btn-primary">Xem chi tiáº¿t</a> <i
                                class="fa-solid fa-dollar-sign mt-2" style="float:right;">
                                <%= devices[i].price %>
                            </i>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <% let len=devices.length - (devices.length % 3)%>
            <%for(let i=0; i < len + 1; i++) {%>
                <form action="/home" style="display: inline-block;" class="mt-3">
                    <input type="text" name="id" id="" value="<%= i + 1%>" hidden>
                    <input type="submit" class="btn btn-primary" value="<%= i + 1%>">
                </form>
                <%}%>
    </div>