<div class="container mt-3">
    <h1 class="text-center">Đăng Ký</h1>
    <form class="border border-dark" style="margin: 0 200px; padding: 50px; border-radius: 20px;" method="POST"
        action="/signup">
        <div class="mb-3">
            <label for="name" class="form-label"><b>Tên người dùng:</b></label>
            <input type="text" class="form-control border border-dark" id="name" name="username"
                placeholder="Nhập vào tên người dùng ">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label"><b>Mật khẩu:</b></label>
            <input type="password" class="form-control border border-dark" id="password" name="password"
                placeholder="Nhập vào mật khẩu">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label"><b>Xác nhận mật khẩu:</b></label>
            <input type="password" class="form-control border border-dark" id="password" name="comfirm_password"
                placeholder="Nhập vào mật khẩu">
        </div>
        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-dark">Đăng ký</button>
        </div>
    </form>
</div>